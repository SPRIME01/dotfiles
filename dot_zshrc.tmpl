# Oh My Zsh (optional)
if [[ -d "${ZSH:-$HOME/.oh-my-zsh}" ]]; then
  export ZSH="${ZSH:-$HOME/.oh-my-zsh}"
  # Load framework if available; plugins/themes configured separately
  source "$ZSH/oh-my-zsh.sh"
fi

{{ template "partials/direnv_hook.tmpl" . }}

{{ template "partials/ssh_agent_bridge.tmpl" . }}

{{ template "partials/projects_path.tmpl" . }}

{{ if eq .chezmoi.os "linux" }}
{{   $rel := lower .chezmoi.kernel.release }}
{{   if contains $rel "microsoft" }}
{{     /* WSL-specific PATH configuration */ }}
{{     template "partials/wsl_path.tmpl" . }}
{{   end }}
{{ else if eq .chezmoi.os "windows" }}
{{   /* Windows-specific PATH configuration */ }}
{{   template "partials/windows_path.tmpl" . }}
{{ else if eq .chezmoi.os "darwin" }}
{{   /* macOS-specific PATH configuration */ }}
{{   template "partials/macos_path.tmpl" . }}
{{ end }}

