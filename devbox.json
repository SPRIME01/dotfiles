{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "chezmoi@latest",
    "just@latest",
    "mise@latest",
    "sops@latest",
    "age@latest",
    "direnv@latest",
    "git@latest",
    "shellcheck@latest",
    "shfmt@latest",
    "jq@latest",
    "ripgrep@latest",
    "fd@latest",
    "gh@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'üöÄ Devbox environment loaded'",
      "echo ''",
      "echo 'Available tools:'",
      "echo '  ‚Ä¢ chezmoi - Dotfile management'",
      "echo '  ‚Ä¢ just - Task runner'",
      "echo '  ‚Ä¢ mise - Tool version manager'",
      "echo '  ‚Ä¢ sops - Secret management'",
      "echo '  ‚Ä¢ age - Encryption'",
      "echo '  ‚Ä¢ direnv - Environment loader'",
      "echo ''",
      "# Initialize direnv if available",
      "if command -v direnv >/dev/null 2>&1; then",
      "  eval \"$(direnv hook bash)\"",
      "  export DIRENV_LOG_FORMAT=''",
      "fi",
      "# Initialize mise if available",
      "if command -v mise >/dev/null 2>&1; then",
      "  eval \"$(mise activate bash)\"",
      "fi"
    ],
    "scripts": {
      "bootstrap": [
        "echo 'üîß Bootstrapping dotfiles environment...'",
        "chezmoi init --apply || echo 'Chezmoi already initialized'",
        "mise install || echo 'Mise tools installed'",
        "echo '‚úÖ Bootstrap complete'"
      ],
      "lint": [
        "echo 'üîç Linting shell scripts...'",
        "bash tools/lint.sh"
      ],
      "test": [
        "echo 'üß™ Running tests...'",
        "bash scripts/run-tests.sh"
      ],
      "security-scan": [
        "echo 'üîí Scanning for secrets...'",
        "if command -v detect-secrets >/dev/null 2>&1; then",
        "  detect-secrets scan",
        "else",
        "  echo '‚ö†Ô∏è  detect-secrets not installed. Install with: pip install detect-secrets'",
        "fi"
      ]
    }
  },
  "env": {
    "DOTFILES_ROOT": "$PWD"
  }
}
