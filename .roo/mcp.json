{
  "mcpServers": {
    "ref-tools-mcp": {
      "command": "wsl",
      "args": [
        "--",
        "bash",
        "-lc",
        "npx -y @smithery/cli@latest run @ref-tools/ref-tools-mcp --key \"$SMITHERY_KEY\""
      ],
      "env": {
        "SMITHERY_KEY": "${SMITHERY_KEY}",
        "WSLENV": "SMITHERY_KEY/u"
      }
    }
  }
}
